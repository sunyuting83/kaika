<template>
  <div class="notification is-danger error" :style="{'top':hoverTop+'px'}" v-if="active">
    <button class="delete" @click="this.closErr"></button>
    <p>{{message}}</p>
  </div>
</template>

<script>
import { reactive, toRef, toRefs, watch } from 'vue'
export default {
  name: 'NotIfication',
  props: {
    active:{
      type: Boolean,
      default: false
    },
    message: {
      type: String,
      default: ""
    },
    closErr: {
      type: Function
    }
  },
  emits: ["update:active"],
  setup(props, context){
    let _data = reactive({
      active: toRef(props, "active"),
      message: toRef(props, "message"),
      hoverTop: 0
    })
    watch(() => _data.active,(newValue) => {
      if (newValue === true) {
        openError()
      }
    })
    watch(() => _data.message,(newValue) => {
      _data.message = newValue
    })
    watch(() => _data.hoverTop,(newValue) => {
      _data.hoverTop = newValue
    })
    const openError = () => {
      _data.active = true
      const scrollTop = document.documentElement.scrollTop || window.pageYOffset || document.body.scrollTop;
      _data.hoverTop = scrollTop
      
      setTimeout(function(){
        context.emit("update:active", false)
      },1500)
    }
    return {
      ...toRefs(_data)
    }
  }
}
</script>

<style scoped>
.error {
  position:absolute;
  right: 0px;
  width: 240px;
  z-index: 9999999999;
}
</style>